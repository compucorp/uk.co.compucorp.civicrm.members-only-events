<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Membersonlyevent</base>
  <class>MembersOnlyEvent</class>
  <name>civicrm_membersonlyevent</name>
  <comment>Members Only Event entity settings table</comment>
  <add>4.4</add>
  <log>true</log>

  <field>
    <name>id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Unique Members Only Event ID</comment>
    <add>4.4</add>
  </field>
  <primaryKey>
    <name>id</name>
    <autoincrement>true</autoincrement>
  </primaryKey>

  <field>
    <name>event_id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Foreign key for the Event</comment>
    <add>4.4</add>
  </field>
  <foreignKey>
    <name>event_id</name>
    <table>civicrm_event</table>
    <key>id</key>
    <add>4.4</add>
    <onDelete>CASCADE</onDelete>
  </foreignKey>
  
  <field>
    <name>membership_url</name>
    <type>varchar</type>
    <length>255</length>
    <comment>URL for purchasing membership</comment>
    <title>Title</title>
    <required>true</required>
    <add>4.4</add>
  </field>
  
  <field>
    <name>members_event_type</name>
    <type>int unsigned</type>
    <title>=Members Event Type</title>
    <default>0</default>
    <comment>If the value is other than 1, only users with &quot;Can register for Members events&quot; will be able to register for this event.</comment>
    <add>1.7</add>
    <html>
      <type>Radio</type>
    </html>
  </field>

</table>
